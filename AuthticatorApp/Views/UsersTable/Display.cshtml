@* Using Bootstrap for styling and icons *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Restricted Page</title>
</head>
<body class="bg-light text-center">

    <div class="container mt-5">
        <div class="card p-4">
            <h1 class="display-4 text-danger"><i class="bi bi-lock"></i>Authenticated User: @User.Identity.Name </h1>
            <h1 class="display-4 text-primary"><i class="bi bi-lock"></i> Restricted Access</h1>
            <p class="lead">This page is only accessible to authenticated users.</p>
            <p class="text-muted">Welcome, @User.Identity.Name!</p>
            <p class="text-danger">You can see the page as you are logged in.</p>

            <div class="mt-4">
                <a href="/Home/Index" class="btn btn-primary"><i class="bi bi-house-door"></i> Go to Home</a>
                <a href="/UserAuthentication/Logout" class="btn btn-danger"><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>
        </div>
        <div class="mt-5">
            <h2>Users Table</h2>
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-primary">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>User</td>
                        <td>@User.Identity.Name</td>
                        <td>0190</td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
