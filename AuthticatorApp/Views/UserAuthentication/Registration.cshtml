@model AuthticatorApp.Models.DTO.RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <form asp-action="Registration" method="post" class="p-4 border rounded shadow">
                    <h1 class="mb-4 text-center text-primary">Create User Form</h1>

                    <div class="mb-3">
                        <label for="Name" class="font-weight-bold form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Username" class="font-weight-bold form-label">Username (Email)</label>
                        <input type="email" class="form-control" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="font-weight-bold form-label">Password</label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3">
                        <label for="PasswordConfirm" class="font-weight-bold form-label">Confirm Password</label>
                        <input type="password" class="form-control" asp-for="PasswordConfirm" />
                        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Phonenumber" class="font-weight-bold form-label">Phonenumber</label>
                        <input type="tel" class="form-control" asp-for="Phonenumber" />
                        <span class="text-danger" asp-validation-for="Phonenumber"></span>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-info mb-3">
                            @TempData["msg"]
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                        <p>Already have a account?<a href="/UserAuthentication/Login">Login</a></p>
                        <button class="btn btn-danger"><a class=" text-light" href="/UserAuthentication/Login">Cancel</a></button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</body>
</html>
