@* Using Bootstrap for styling and icons *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Admin Page</title>
</head>
<body class="bg-light text-center">

    <div class="container mt-5">
        <div class="card p-4">
            <h1 class="display-4 text-success"><i class="bi bi-shield-check"></i> Admin Access Granted</h1>
            <p class="lead">Welcome, Admin!</p>
            <p class="text-muted">You have exclusive access to this section.</p>

            <div class="mt-4">
                <a href="/Home/Index" class="btn btn-primary"><i class="bi bi-house-door"></i> Go to Home</a>
                <a href="/UserAuthentication/Logout" class="btn btn-danger"><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>

            <div class="mt-5">
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">Important Notice</h4>
                    <p>This section is exclusively for administrators. Make sure to perform your tasks responsibly.</p>
                    <hr>
                    <p class="mb-0">If you have any issues, contact support.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
