
@{
    string username = User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Welcome Page</title>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card p-4">
            <h2 class="text-center mb-4">Welcome, @username</h2>
            <p class="text-center text-danger"><b>Both normal user admin has access to this page.</b></p>
            <p class="lead text-center">Thank you for visiting our website. We're glad to have you here!</p>

            <div class="text-center mt-4">
                <a href="#" class="btn btn-primary">Explore More</a>
                <a href="/UserAuthentication/Logout/" class="btn btn-danger">Logout</a>
             
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

